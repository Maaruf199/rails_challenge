<div class="container-fluid">
    <div class="row">
      <div class="col-md-3">
        <%# render with variable  %>
        <%= render  "users/profile", user: @post.user %>
    </div>
        <div class="col-md-9">
            <div class="card">
                <% if @post.post_image.attached? %>
                    <%= image_tag @post.post_image, height: "auto", width: "100%" %>
                <% end %>
                <div class="card-body">
                    <%= @post.title%>
                </div>
            </div>
            <div>
            
            <div class="mt-3">
            <%= form_for [@post, @comment], html:{ class: "mb-3"} do |f| %>
                <%= f.text_area :comment, class: "form-control mb-2" %>
                <%= f.submit "comment", class: "btn btn-primary" %>
            <% end %>

            <% @post.comments.each do |comment| %>
                <div class="media">
                    <img class="mr-3" src="http://placehold.it/64x64" alt="Generic placeholder image">
                    <div class="media-body">
                        <h5 class="mt-0"><%= comment.user.firstname %> <%= comment.user.lastname %></h5>
                        <%= comment.comment %>
                    </div>
                </div>
            <% end %>
                
            </div>
        </div>
    </div>
</div>